<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:orientation="vertical" >

    <TextView android:text="@string/convert_header"
        android:layout_width="107dp"
        android:layout_height="38dp"
        android:textSize="@dimen/abc_text_size_large_material" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/EnterTempText"
        android:hint="Enter Temp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:textSize="28dp"
        android:text="From"/>
        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:textSize="28dp"
            android:text="To"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <RadioGroup
        android:layout_width="160dp"
        android:layout_height="140dp"
        android:id="@+id/radioGroup_Left">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rb1_Left"
            android:textSize="22dp"
            android:id="@+id/rb1_left" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rb2_Left"
            android:textSize="22dp"
            android:id="@+id/rb2_left" />


        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rb3_Left"
            android:textSize="22dp"
            android:id="@+id/rb3_left" />


        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rb4_Left"
            android:textSize="22dp"
            android:id="@+id/rb4_left" />


    </RadioGroup>

    <RadioGroup
        android:layout_width="160dp"
        android:layout_height="140dp"
        android:id="@+id/radioGroup_Right">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rb1_Right"
            android:textSize="22dp"
            android:id="@+id/rb1_right" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rb2_Right"
            android:textSize="22dp"
            android:id="@+id/rb2_right" />


        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rb3_Right"
            android:textSize="22dp"
            android:id="@+id/rb3_right" />


        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rb4_Right"
            android:textSize="22dp"
            android:id="@+id/rb4_right" />


    </RadioGroup>


    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/convert_Button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/convert_Button"
            android:textSize="22dp"
            />
        </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tempOutputLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:width="360dp"
            android:textSize="32dp"
            android:nestedScrollingEnabled="false"
            android:text="output"
            android:gravity="center_horizontal"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/formula_Output"
            android:width="340dp"
            android:textSize="20dp"
            android:text="formula"
            android:gravity="center_horizontal"/>
    </LinearLayout>

</LinearLayout>
